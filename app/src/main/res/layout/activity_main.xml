<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hussamsherif.ultratictactoe.Activities.MainActivity"
    android:background="@color/background_color">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/button_layout"
        android:src="@drawable/xo"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:id="@+id/button_layout">

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/single_player_rippleView">
            <Button
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/single_player"
                android:id="@+id/single_player_btn"
                android:background="@drawable/rounded_button"/>

        </com.andexert.library.RippleView>


        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/multi_player_rippleView"
            android:layout_marginTop="20dp">
            <Button
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/multi_player"
                android:id="@+id/multi_player_btn"
                android:background="@drawable/rounded_button"/>
        </com.andexert.library.RippleView>

        <com.andexert.library.RippleView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/share_ripple_view"
            android:layout_marginTop="20dp">
            <Button
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/share"
                android:id="@+id/share_btn"
                android:background="@drawable/rounded_button"/>

        </com.andexert.library.RippleView>


    </LinearLayout>

</RelativeLayout>
