<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:key="names_category"
        android:title="Names">
        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:title="@string/x_player_name"
            android:key="first_player_name" />

        <com.afollestad.materialdialogs.prefs.MaterialEditTextPreference
            android:title="@string/o_player_name"
            android:key="second_player_name"/>
    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/colors"
        android:key="color_preference_category">

        <hussamsherif.com.tictactoe.ColorPreference
            android:title="@string/active_cell_color"
            android:widgetLayout="@layout/widget_layout"
            android:key="active_cell_color"
            app:reference="active_cell_color"/>

        <hussamsherif.com.tictactoe.ColorPreference
            android:title="@string/first_unactive_cell_color"
            android:widgetLayout="@layout/widget_layout"
            android:key="first_unactive_cell_color"
            app:reference="first_unactive_cell_color"/>

        <hussamsherif.com.tictactoe.ColorPreference
            android:title="@string/second_unactive_cell_color"
            android:widgetLayout="@layout/widget_layout"
            android:key="second_unactive_cell_color"
            app:reference="second_unactive_cell_color"/>

        <hussamsherif.com.tictactoe.ColorPreference
            android:title="@string/x_color"
            android:widgetLayout="@layout/widget_layout"
            android:key="x_color"
            app:reference="x_color"/>

        <hussamsherif.com.tictactoe.ColorPreference
            android:title="@string/y_color"
            android:widgetLayout="@layout/widget_layout"
            android:key="y_color"
            app:reference="y_color"/>

    </PreferenceCategory>


</PreferenceScreen>